<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bgc"
        app:layout_constraintBottom_toTopOf="@+id/btnActionModeMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.835"></ImageView>

    <Button
        android:id="@+id/btnActionModeMenu"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:text="ACTION MODE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnPopUpMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPopUpMenu"
        android:layout_width="167dp"
        android:layout_height="54dp"
        android:layout_marginBottom="168dp"
        android:background="#000000"
        android:text="POP-UP MENU"
        android:onClick="showPopUpMenu"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>